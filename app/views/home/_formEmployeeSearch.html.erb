<style>

	
	.outer_container
	{
		margin:10px;
	}
	
	
	.drop { width:250px; }
	.drops { width:250px; }
</style>

<style>
	table.serifa{font-family:Arial,Helvetica,sans-serif;}
</style>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js">
</script>



<script>
	$(document).ready(function(){
		$("#mydiv").hide();
		$("#btn").hide();
		
		$('.drop').change(function() 
		{
			$.ajax({ 
				  type: 'GET', 
				  url: '/jobseeker/popSecond', 
				  data: {'id' : $('.drop').val()},
				  success: function(data) 
				  {
						   $('#secDrop').empty();
						   $('#secDrop').append( $('<option value= "">Select Speciality</option>'));						   
						   $.each(data,function(i, v) {
						   $('#secDrop').append( $('<option value="'+ data[i][0] +'">'+data[i][1] +'</option>'));
						 });
				  } 
			  });
		});
	});	
</script>

<script>
	$(document).ready(function(){

		$('.drops').change(function() 
		{
			$.ajax({ 
				  type: 'GET', 
				  url: '/jobseeker/PopThird', 
				  data: {'id' : $('.drops').val()},
				  success: function(data) 
				  {
						   $('#txt').empty();	
						   $('#txt').append('click checkbox to add your Skill');
						   $('.my').empty();
						   $.each(data,function(i, v) {
						   $('.my').append( $('<div><span>-</span><input type="checkbox" name="skill[]" class = "boox" value="'+ data[i][0] +'" /><span >'+data[i][1] +'</span></div>'));
						   $("#btn").show();
						 });
				  } 
			  });
		});
	});	
</script>

<script>
$(document).ready( function() {
   $('.jobDrop').change( function() {
	  var jobID  =  $('.jobDrop').val();
      location.href = '/home/availableCandidate?jobID='+jobID;
      
   });
});
</script>

