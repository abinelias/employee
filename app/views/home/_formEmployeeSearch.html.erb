			<div style="width:100%;">
				<table  width="500px">
					<tr>
						<td>
							Search by Skills
						</td>
					</tr>
					<tr>
						<td width="200px">
							please select your category
						</td>
						<td width="300px">
						
							<%= select_tag "sel_group", options_for_select(@skill) ,{:class => "drop"} %>
						</td>
					</tr>
					<tr>
						<td width="200px">
							please select your Speciality
						</td>
						<td width="300px">
						
							<%= select_tag "sel_group1", options_for_select(@subskill), {:id => "secDrop" , :class => "drops"} %>
