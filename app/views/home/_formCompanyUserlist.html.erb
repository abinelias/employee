<style>
	table.serifa{font-family:Arial,Helvetica,sans-serif;}
</style>
<div class = "textfont">
	<table align ="center">
		<% unless(@companyDetails.nil?)%>
			<% @companyDetails.each do |value| %>
				<tr>
					<td>Company Name: </td><td><%= link_to value['companyName']  , url_for({:controller => 'home', :action => 'editCompany' , :companyID => value['companyID'].to_s}), {:style=>'color:#FF0000;'} %> <td>
				</tr>
				<tr>
					<td>Location:</td><td> <%= value['companyCity'] %>, <%= value['companyState'] %> <td>
				</tr>
			<% end %>	
		 <% end %>
		 <% unless(@cntArray.nil?)%>
			<tr>
					<table cellpadding="0" cellspacing="0" border="0" width="100%">
						<tr>
							<td align="center" valign="middle">
								<table border = 0 cellpadding="5">
									<tr align="center" valign="middle"  bgcolor="#4D94FF">							
										<th>Name</th>	 
										<th>Email</th>
										<th>Permission</th>																			
										<th>Role</th>									
										<th>Actions</th>																		
									</tr>
									 <% @cntArray.each do |value| %>
										<% @count = @count +1 %>
										<tr <% if (@count%2 == 0) %>
												   bgcolor="#E4EFFF"
											 <% else %>   	   	
													bgcolor="#A6CAFF"
											 <% end %>		>
											<td><%= link_to value['firstname']  , url_for({:controller => 'home', :action => 'editUser' , :prospect => value['employerid'].to_s }), {:style=>'color:#FF0000;'} %></td>
											<td><%= value['email'].to_s %></td>
											<td><%= value['permission'].to_s %></td>
											<td><%= value['role'].to_s %></td>
											<td><%= link_to "Delete"%> | <%= link_to 'Edit'  , url_for({:controller => 'home', :action => 'editUser' , :prospect => value['employerid'].to_s }), {:style=>'color:#FF0000;'} %> </td>	   
										</tr>
									<% end %>
									<tr>
										<td>
											<%= form_tag  %>	
											<input type="submit" value="Add user" name="add" id="add" class="buttonStyle">
										</td>
									</tr>
								</table>
							</td>
						</tr>
					</table>
				</td>
			</tr>

		<% else %>
			<tr>
				<td style= "color:red"><% unless @error.blank? %><%= @error %><% else %>No Employee Found!<%end%></td>
			</tr>
		<% end %>		
	</table>
</div>
	
			
