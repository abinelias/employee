<script>
	$(function() 
	{
		$( "#tabs" ).tabs();
	});
</script>

<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" />
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>
<link rel="stylesheet" href="/resources/demos/style.css" />
<script>
$(function() {
$( ".sdate" ).datepicker();
$( "#datepickers" ).datepicker();
});
</script>

<style>

#tabs { 
    padding: 0px; 
    background: none; 
    border-width: 0px; 
} 
#tabs .ui-tabs-nav { 
    padding-left: 0px; 
    background: transparent; 
    border-width: 0px 0px 1px 0px; 
    -moz-border-radius: 0px; 
    -webkit-border-radius: 0px; 
    border-radius: 0px; 
} 
#tabs .ui-tabs-panel { 
    border-width: 0px 1px 1px 1px; 
}

#tabs .ui-tabs-active {
  background: #FFAD5C;
}

</style>

<title>Employer</title>
<div id="container" style="width:100%">
	<div id="header" style="height:50px;margin-left: 3%;margin-top: 1.5%;">
		<%= link_to image_tag('/images/logo.jpg') , url_for({:controller => 'home', :action => 'homePage'}) %> 
	</div>
	<div id="menu" style="height:700px;width: 200px;float:left;">
		<br>
		<%= link_to "Dashboard" , url_for({:controller => 'home', :action => 'dashBoard'}), {:class => "linkStyle"} %><br><br>
		<%= link_to "Users" , url_for({:controller => 'home', :action => 'companyUserList'}), {:class => "linkStyle"} %><br><br>
		<%= link_to "Post Jobs" , url_for({:controller => 'home', :action => 'jobPostingNew'}), {:class => "linkStyle"} %><br><br>
		<%= link_to "Search Candidates" , url_for({:controller => 'home', :action => 'candidateSearch'}), {:class => "linkStyle"} %><br><br>
		
	</div>
	<table width="70%" border="0" cellpadding="0" cellspacing="0" align ="center" >
		<tr>
			<td align ="right">Welcome <%= session[:empfirst] %> <%= session[:emplast] %><%= link_to "Signout" , url_for({:controller => 'home', :action => 'signout'}), {:class => "signout"} %></td>
		</tr>
			<tr>
				<td>
					You can edit you job details, prerequsites and skils here 
					<div id="tabs">
						<ul>
							<li><a href="#tabs-1">Job Details</a></li>
							<li><a href="#tabs-2">Job Prerequisites</a></li>
							<li><a href="#tabs-3">Job Skills</a></li>
						</ul>
						<div id="tabs-1">
							<%= form_tag(:action => "updateJobDetails") do  %>	
								<%= render 'formEditJobDetails' %>
							<% end %>
						</div>
						<div id="tabs-2">
							<%= form_tag(:action => "updatePrerequsite") do  %>	
								<%= render 'formEditprequsite' %>
							<% end %>
						</div>
						<div id="tabs-3">
							<%= form_tag(:action => "editJobSkill") do  %>	
								<%= render 'formEditJobSkill' %>
							<% end %>
						</div>
					</div>
				</td>
			</tr>
		</table>			
	</div>	
</div>
