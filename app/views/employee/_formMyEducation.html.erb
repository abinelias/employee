<div class = "textfont">
	<table width="100%">
		<tr>
			<td>
				<table align = "left">	
					<% unless(@cntArray.nil?)%>
						<table>
							<tr>	
								<td>
									<div STYLE="margin-left: 10%">
										<table width="100%" border="0" cellpadding="5" cellspacing="0" >
											<tr bgcolor="#4D94FF">
												<td width ="200">Institution</td>
												<td width ="200">Degree</td>
												<td width ="200">Field of study</td>
												<td width ="200">Date</td>
												<td width ="200">Actions</td>
											</tr>
											<% @cntArray.each do |value| %>	
												<% @count = @count + 1 %>
												<tr <% if (@count%2 == 0) %>
																	   bgcolor="#E4EFFF"
																 <% else %>   	   	
																		bgcolor="#A6CAFF"
																 <% end %>	>
													<td width ="100"><%= value['college'].to_s %></td>
													<td width ="100"><%= value['degree'].to_s %></td>
													<td width ="100"><%= value['field'].to_s %></td>
													<td width ="100"><%= value['date'].to_s %></td>
													<td><%= link_to "Delete"%> | <%= link_to 'Edit' , url_for({:controller => 'employee', :action => 'editEducation'  , :EduID => value['educationID'].to_s}) ,  :onclick=>"window.open(this.href,'editEducationPopup', 'height=350,width=450,top=250,left=600' ); return false;" %> | <%= link_to "Add Skill"  , url_for({:controller => 'employee', :action => 'addMyskillsPortfolio'})%> </td>	   

												</tr>
											<% end %>
										</table>
									</div>
								</td>
							</tr>
						</table>
					<% end %>	
				</table>	
			</td>
		</tr>
	</table>
</div>
