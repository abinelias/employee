<div class = "textfont">
	<table width="100%">
		<tr>
			<td>
				<table align = "center">	
					<% unless(@courseDetailsArray.blank?)%>
						<tr>
							<td>
								<table cellpadding="0" cellspacing="0" border="0" align ="center" width="100%">
									<tr bgcolor="#4D94FF">
										<td width ="100">Institution Name</td>
										<td width ="100">Location</td>
										<td width ="100">Website</td>
										<td width ="100">Course Title</td>
										<td width ="100">Cost</td>
										<td width ="100">Open Date</td>
										<td width ="100">Time Commitment</td>
									</tr>
										<% @courseDetailsArray.each do |value| %>
											<tr>
												<td width ="200"><%= value['InstitutionName'].to_s %></td>
												<td width ="200"><%= value['InstitutionAddress1'].to_s %></td>
												<td width ="200"><%= value['InstitutionWebsite'].to_s %></td>
												<td width ="400"><%= value['courseTitle'].to_s %></td>
												<td width ="100"><%= value['startdate'].to_s %></td>
												<td width ="100"><%= value['cost'].to_s %></td>
												<td width ="2"><%= value['timerequired'].to_s %></td>
											</tr>
										<% end %>
								</table>
							</td>
						</tr>
					<% else %>
						<tr>
							<td>
								Sorry No Details
							</td>
						</tr>			
					<% end %>	
				</table>	
			</td>
		</tr>
	</table>
</div>
