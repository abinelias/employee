<div class = "textfont">
	<% unless(@skillDetails.nil?)%>	
		<table>
			<tr>	
				<td>
					<div STYLE="margin-left: 10%">
						<table width="100%" border="0" cellpadding="5" cellspacing="0" >
							<tr bgcolor="#4D94FF">
								<td width ="200">Category</td>
								<td width ="200">Speciality</td>
								<td width ="200">Skills</td>
								<td align ="center" width ="200">Proficiency</td>
								<td width ="200">Actions</td>
							</tr>
							<% @skillDetails.each do |value| %>	
								<% @count = @count + 1 %>
								<tr <% if (@count%2 == 0) %>
													   bgcolor="#E4EFFF"
												 <% else %>   	   	
														bgcolor="#A6CAFF"
												 <% end %>	>
									<td width ="100"><%= value['categoryName'].to_s %></td>
									<td width ="100"><%= value['specialityName'].to_s %></td>
									<td width ="100"><%= link_to value['skillName']  , url_for({:controller => 'employee', :action => 'skillvalidate' , :skillID => value['skillID'].to_s}), {:style=>'color:#FF0000;'} %></td>
									<td align ="center" width ="100"><%= value['skillProficency'].to_s %></td>
									<td><%= link_to "Delete"%> | <%= link_to 'Edit'  , url_for({:controller => 'employee', :action => 'myskillsPortfolio'  }), {:style=>'color:#FF0000;'} %> </td>	   

								</tr>
							<% end %>
							<tr>
								<td>
									<%= link_to "Add Skill"  , url_for({:controller => 'employee', :action => 'addMyskillsPortfolio'}), {:class => "buttonStyle"} %>
								</td>
							</tr>	
						</table>
					</div>
				</td>
			</tr>
		</table>
	<% end %>
</div>
